<button id="resetBtn">Reset</button>

<div id="shopPanel" class="dropdownPanel">
  <h3>Shop</h3>
  <div class="item">
    <strong>Click Multiplier</strong>
    <div id="multiplierDisplay">Current Multiplier: x1</div>
    <div id="multiplierCostDisplay">Cost: 50</div>
    <button id="buyMultiplier" class="buyBtn">Buy x2</button>
  </div>
  <div class="item">
    <strong>Auto Clicker</strong>
    <div id="autoDisplay">Auto Clickers: 0</div>
    <div id="autoCostDisplay">Cost: 10</div>
    <button id="buyAuto" class="buyBtn">Buy Auto</button>
  </div>
</div>

<div id="rebirthPanel" class="dropdownPanel">
  <h3>Rebirths</h3>
  <div class="item">
    <div id="rebirthDisplay">Rebirths: 0</div>
    <div id="rebirthCostDisplay">Cost: 1000</div>
    <button id="buyRebirth" class="buyBtn">Rebirth</button>
  </div>
</div>

<div id="themesPanel" class="dropdownPanel">
  <h3>Themes</h3>
  <button id="themeLight" class="buyBtn">Light Theme</button>
  <button id="themeDark" class="buyBtn">Dark Theme</button>
</div>

<div id="counter">Clicks: 0</div>
<button id="clickBtn">Click Me</button>

<script>
let count=0, multiplier=1, multiplierCost=50, autoClickers=0, autoCost=10, rebirths=0, rebirthCost=1000;
const counterEl=document.getElementById('counter'), clickBtn=document.getElementById('clickBtn');
const shopToggle=document.getElementById('shopToggle'), rebirthToggle=document.getElementById('rebirthToggle'), themesToggle=document.getElementById('themesToggle');
const shopPanel=document.getElementById('shopPanel'), rebirthPanel=document.getElementById('rebirthPanel'), themesPanel=document.getElementById('themesPanel');
const resetBtn=document.getElementById('resetBtn');
const buyMultiplier=document.getElementById('buyMultiplier'), buyAuto=document.getElementById('buyAuto'), buyRebirth=document.getElementById('buyRebirth');
const multiplierDisplay=document.getElementById('multiplierDisplay'), multiplierCostDisplay=document.getElementById('multiplierCostDisplay');
const autoDisplay=document.getElementById('autoDisplay'), autoCostDisplay=document.getElementById('autoCostDisplay');
const rebirthDisplay=document.getElementById('rebirthDisplay'), rebirthCostDisplay=document.getElementById('rebirthCostDisplay');
const themeLight=document.getElementById('themeLight'), themeDark=document.getElementById('themeDark');

shopToggle.onclick=()=>{shopPanel.classList.toggle('open');};
rebirthToggle.onclick=()=>{rebirthPanel.classList.toggle('open');};
themesToggle.onclick=()=>{themesPanel.classList.toggle('open');};

function updateDisplay(){
  counterEl.textContent=`Clicks: ${Math.floor(count)}`;
  multiplierDisplay.textContent=`Current Multiplier: x${multiplier}`;
  multiplierCostDisplay.textContent=`Cost: ${multiplierCost}`;
  buyMultiplier.disabled=count<multiplierCost;
  autoDisplay.textContent=`Auto Clickers: ${autoClickers}`;
  autoCostDisplay.textContent=`Cost: ${autoCost}`;
  buyAuto.disabled=count<autoCost;
  rebirthDisplay.textContent=`Rebirths: ${rebirths}`;
  rebirthCostDisplay.textContent=`Cost: ${rebirthCost}`;
  buyRebirth.disabled=count<rebirthCost;
}

clickBtn.onclick=()=>{count+=multiplier;updateDisplay();};
buyMultiplier.onclick=()=>{if(count>=multiplierCost){count-=multiplierCost;multiplier*=2;multiplierCost*=2;updateDisplay();}}
buyAuto.onclick=()=>{if(count>=autoCost){count-=autoCost;autoClickers++;autoCost*=2;updateDisplay();}}
buyRebirth.onclick=()=>{if(count>=rebirthCost){count=0;multiplier=1;autoClickers=0;rebirths++;rebirthCost=Math.floor(rebirthCost*2.5);multiplier+=rebirths*5;updateDisplay();}}
setInterval(()=>{if(autoClickers>0){count+=autoClickers*multiplier;updateDisplay();}},1000);
resetBtn.onclick=()=>{count=0;multiplier=1;multiplierCost=50;autoClickers=0;autoCost=10;rebirths=0;rebirthCost=1000;updateDisplay();}
themeLight.onclick=()=>{document.body.style.background='white';}
themeDark.onclick=()=>{document.body.style.background='#111';}
updateDisplay();
</script>
</body>
